                  <script>
                     document.addEventListener("DOMContentLoaded", function() {
                         var ctxPrice = document.getElementById('priceChart').getContext('2d');
                         var priceChart = new Chart(ctxPrice, {
                             type: 'line',
                             data: {
                                 labels: {{ priceChartData.labels | json_encode | raw }},
                                 datasets: [{
                                     label: 'Average Price',
                                     data: {{ priceChartData.data | json_encode | raw }},
                                     backgroundColor: 'rgba(54, 162, 235, 0.2)',
                                     borderColor: 'rgba(54, 162, 235, 1)',
                                     borderWidth: 1
                                 }]
                             },
                             options: {
                                 responsive: true,
                                 maintainAspectRatio: false,
                                 scales: {
                                     y: {
                                         ticks: {
                                             callback: function(value, index, values) {
                                                 return 'TND' + value; // Add dollar sign to y-axis ticks
                                             }
                                         }
                                     }
                                 }
                                 }
                         });
                     });
                        </script>
