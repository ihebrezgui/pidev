                            <a href="{{ path('app_formation_new') }}" class="btn btn-success">Create New Formation</a>
                         </div>
                            <ol class="breadcrumb mb-4">
                               <li class="breadcrumb-item active">Dashboard</li>
                             </ol>
                        <div class="row">
                                     <style>
                                      /* You can add this style block in your CSS file */
                                       .card-custom {
                                       margin-bottom: 1rem;
                                       padding: 1rem;
                                        border: none;
                                        border-radius: .35rem;
                                        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, .15);
                                        }
                                    .card-header-custom {
                                        font-weight: bold;
                                        font-size: 1.2rem;
                                    }
                                    .card-body-custom {
                                        font-size: 1rem;
                                    }
                                    </style>
                                    {% for type, count in typeCounts %}
                                     {% set bg_color = loop.index0 % 3 == 0 ? 'bg-danger' : (loop.index0 % 3 == 1 ? 'bg-warning' : 'bg-primary') %}
                                        <div class="col-md-4">
                                            <div class="card {{ bg_color }} text-white card-custom">
                                                <div class="card-header card-header-custom">
                                                 {{ type|capitalize }}: {{ count }}
                                                </div>
                                                <div class="card-body card-body-custom">
                                                    <a class="small text-white stretched-link" href="{{ path('app_formation_by_type', {'type': type}) }}">
                                                        View Details
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}    
                                </div>
                        <div class="row">
                            <div class="col-xl-6">
