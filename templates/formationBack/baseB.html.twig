                                       <canvas id="formationChart" width="400" height="400"></canvas>
                                   </div>
                               </div>
                           </div>
                              <!-- Pie Chart Script -->
                               <script>
                                document.addEventListener("DOMContentLoaded", function() {
                             var ctx = document.getElementById('formationChart').getContext('2d');
                             
                             var formationChart = new Chart(ctx, {
                                 type: 'pie',
                                 data: {
                                     labels: {{ chartData.labels | json_encode | raw }},
                                     datasets: [{
                                         data: {{ chartData.data | json_encode | raw }},
                                         backgroundColor: [
                                          'rgba(255, 99, 132, 0.6)',    // Red
                                               'rgba(54, 162, 235, 0.6)',     // Blue
                                               'rgba(255, 206, 86, 0.6)',     // Yellow
                                               'rgba(75, 192, 192, 0.6)',     // Green
                                               'rgba(153, 102, 255, 0.6)',    // Purple
                                               'rgba(255, 159, 64, 0.6)',     // Orange
                                               'rgba(199, 199, 199, 0.6)',    // Grey
                                               'rgba(163, 255, 84, 0.6)',     // Lime Green
                                               'rgba(255, 87, 51, 0.6)',      // Dark Orange
                                               'rgba(137, 196, 244, 0.6)',    // Light Blue
                                               'rgba(255, 195, 0, 0.6)',      // Amber
                                               'rgba(124, 77, 255, 0.6)',     // Deep Purple
                                               'rgba(179, 157, 219, 0.6)',    // Lavender
                                               'rgba(253, 203, 110, 0.6)'     // Peach
                                           ],
                                           borderColor: [
                                               'rgba(255, 99, 132, 1)',
                                               'rgba(54, 162, 235, 1)',
                                               'rgba(255, 206, 86, 1)',
                                               'rgba(75, 192, 192, 1)',
                                               'rgba(153, 102, 255, 1)',
                                               'rgba(255, 159, 64, 1)',
                                               'rgba(199, 199, 199, 1)',
                                               'rgba(163, 255, 84, 1)',
                                               'rgba(255, 87, 51, 1)',
                                               'rgba(137, 196, 244, 1)',
                                               'rgba(255, 195, 0, 1)',
                                               'rgba(124, 77, 255, 1)',
                                               'rgba(179, 157, 219, 1)',
                                               'rgba(253, 203, 110, 1)'
                                           ],
                                         borderWidth: 1
                                     }]
                                 },
                                 options: {
                                     responsive: true,
                                     maintainAspectRatio: false
                                  }
                                 });
                             });
                              </script>  
                           <div class="col-xl-6">
                             <div class="card mb-4">
                               <div class="card-header">
                                    <i class="fas fa-chart-line me-1"></i>
                                    Average Price of Formations Line Chart
