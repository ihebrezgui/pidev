{% extends 'baseBack.html.twig' %}
{% block event %}
<div class="container">
    <h1>Event Statistics</h1>
    <canvas id="eventCountChart"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
var eventCountChart = new Chart(document.getElementById("eventCountChart"), {
    type: 'bar',
    data: {
        labels: {{ eventsByMonth|json_encode|raw }}.map(function(event) { return event.month; }),
        datasets: [{
            label: 'Event Count',
            data: {{ eventsByMonth|json_encode|raw }}.map(function(event) { return event.eventCount; }),
            backgroundColor: 'rgba(75, 192, 192, 0.2)',
            borderColor: 'rgba(75, 192, 192, 1)',
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            y: {
                beginAtZero: true,
                ticks: {
                    stepSize: 1
            }
        }
    }}
});
</script>
{% endblock %}

