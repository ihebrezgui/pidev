{% extends 'baseBack.html.twig' %}

{% block gestion %}

    {% block body %}
        <h1>Les utilisateurs:</h1>
       
      <link rel="stylesheet" href="{{ asset('back/css/styles.css') }}">


        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Date de Naissance</th>
                    <th>Numéro de téléphone</th>
                    <th>Email</th>
                    <th>Sexe</th>
                    <th>Rôle</th>
                </tr>
            </thead>
            <tbody>
                {% if utilisateurs is not empty %}
                    {% for utilisateur in utilisateurs %}
                        <tr>
                            <td>{{ utilisateur.nom }}</td>
                            <td>{{ utilisateur.prenom }}</td>
                            <td>{{ utilisateur.dateNais ? utilisateur.dateNais|date('Y-m-d') : '' }}</td>
                            <td>{{ utilisateur.numTel }}</td>
                            <td>{{ utilisateur.email }}</td>
                            <td>{{ utilisateur.sexe }}</td>
                            <td>{{ utilisateur.role }}</td>
                            <td>
                                <a href="{{ path('app_utilisateur_show', {'id': utilisateur.id}) }}">Afficher</a>
                                <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}">Modifier</a>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="11">pas d'utilisateurs trouvés</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>

        <a href="{{ path('app_utilisateur_new') }}">Ajouter un nouveau utilisateur</a>
    {% endblock %}
{% endblock %}
