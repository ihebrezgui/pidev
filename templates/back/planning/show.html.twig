{% extends 'baseBack.html.twig' %}
{% block planning %}
{% block title %}Planning{% endblock %}

{% block body %}
    <h1>Planning</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdPlanning</th>
                <td>{{ planning.idPlanning }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ planning.titre }}</td>
            </tr>
            
            <tr>
                <th>Date</th>
                <td>{{ planning.date ? planning.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Approved</th>
                <td>{{ planning.approved ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_planning_index') }}">back to list</a>

    <a href="{{ path('app_planning_edit', {'idPlanning': planning.idPlanning}) }}">edit</a>

    {{ include('back/planning/_delete_form.html.twig') }}
{% endblock %}
{% endblock %}