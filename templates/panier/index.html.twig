                                             <h5 class="card-title"></h5>
                                                <div class="table-responsive">

                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-outline-dark btn-sm dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                                        <i class="fas fa-sort-amount-up"></i> Trier par
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li><a class="dropdown-item" href="{{ path('tri_par_nom') }}">Nom</a></li>
                                                        <li><a class="dropdown-item" href="{{ path('tri_par_prix') }}">Prix</a></li>
                                                    </ul>
                                                </div>
                                                <script>
const dropdownItems = document.querySelectorAll('.dropdown-content a');

// Loop through each dropdown item
dropdownItems.forEach(item => {
    // Add click event listener to each item
    item.addEventListener('click', function(event) {
        // Prevent default behavior (e.g., page scroll)
        event.preventDefault();

        // Get the URL of the clicked item
        const url = item.getAttribute('href');

        // Navigate to the URL
        window.location.href = url;
    });
});
</script>


                                            <form action="{{ path('rechercher_panier') }}" method="GET">
                                                    <form action="{{ path('rechercher_panier') }}" method="GET">
                                                    <div class="input-group mt-3" style="max-width: 320px; margin-left: auto;">
                                                        <input type="text" name="q" id="searchInput" class="form-control" placeholder="Rechercher dans le panier...">
                                                        <button type="submit" class="btn btn-primary">Rechercher</button>
                                                    </div>
                                                </form>




                                            <h1></h1>
                                                    <table class="table table-striped table-bordered table-hover">
                                                        <thead class="thead-dark">
                                                            <tr>
                                                                <th scope="col">ProdId</th>
                                                                <th scope="col">Nom</th>
                                                                <th scope="col">Quantité</th>
                                                                <th scope="col">Prix</th>
                                                                <th scope="col">Total</th>
                                                                <th scope="col">Actions</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            {% if panier | length == 0 %}
                                                                <tr>
                                                                    <td colspan="6" class="text-center">Le panier est vide.</td>
                                                                </tr>
                                                            {% else %}
                                                                {% set totalPrix = 0 %}
                                                                {% for p in panier %}
                                                                    <tr>
                                                                        <td>{{ p.prodId }}</td>
                                                                        <td>{{ p.nom }}</td>
                                                                        <td>{{ p.quantite }}</td>
                                                                        <td>{{ p.prix }} DT</td>
                                                                        <td>{{ p.quantite * p.prix }} DT</td>
                                                                        <td class="d-flex align-items-center">
                                                                            <a href="{{ path('modifier_panier',{idp:p.idp}) }}" class="btn btn-sm btn-primary me-2">Modifier</a>
                                                                            <a href="#" onclick="if(confirm('Voulez-vous vraiment supprimer ?')) { window.location='{{ path('supprimerPanier', {'idp': p.idp}) }}'; }" class="btn btn-sm btn-danger">Supprimer</a>
                                                                        </td>
                                                                    </tr>
                                                                    {% set totalPrix = totalPrix + (p.quantite * p.prix) %}
                                                                {% endfor %}
                                                            {% endif %}
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <div class="text-end mt-3">
                                                    {% if panier | length == 0 %}
                                                        <p>Total des prix :0 DT</p>
                                                    {% else %}
                                                        <p>Total des prix : {{ totalPrix }} DT</p>
                                                    {% endif %}
                                                    {#<a href="{{ path('liste_produits') }}" class="btn btn-outline-info me-2">Ajouter autre produits</a>
                                                    <a href="{{ path('ajouter_commande') }}" class="btn btn-outline-info">Passer votre commande</a>    #} 

                                                <div id="searchResults" class="mt-3">
                                                <script>
                                                    $(document).ready(function() {
                                                        $('#searchInput').on('input', function() {
                                                            var searchTerm = $(this).val();
                                                            if (searchTerm.length >= 1) { // Vérifier si au moins une lettre est saisie
                                                                $.ajax({
                                                                    url: "{{ path('rechercher_panier') }}",
                                                                    method: "GET",
                                                                    data: { q: searchTerm },
                                                                    success: function(response) {
                                                                        if (response.trim() === '') {
                                                                            $('#searchResults').html('<p>Aucun résultat trouvé.</p>');
                                                                        } else {
                                                                            $('#searchResults').html('<p>Résultats pour le mot "' + searchTerm + '" :</p>' + response);
                                                                        }
                                                                    }
                                                                });
                                                            } else {
                                                                $('#searchResults').html(''); // Effacer les résultats si aucun texte n'est saisi
                                                            }
                                                        });
                                                    });
                                                </script>

 <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar me-1"></i>
                    Statistiques par produit
                </div>
                <div class="card-body">
                    <canvas id="myChart" width="400" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript pour le graphique et la requête AJAX -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
   <script>
    document.addEventListener('DOMContentLoaded', function() {
    fetch('{{ path('statistique_quantite_produits') }}') // Endpoint Symfony pour récupérer les données
        .then(response => response.json())
        .then(data => {
            const labels = data.map(item => item.nom); // Utiliser la clé 'nom' pour les labels
            const quantities = data.map(item => item.quantite); // Utiliser la clé 'quantite' pour les quantités

            const ctx = document.getElementById('myChart').getContext('2d');
            const myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Quantité par produit',
                        data: quantities,
                        backgroundColor: 'rgba(54, 162, 235, 0.6)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 0.4, // Pas de 0.4 sur l'axe Y
                                font: {
                                    size: 14 // Ajuster la taille de la police de l'axe Y
                                }
                            }
                        },
                        x: {
                            ticks: {
                                font: {
                                    
                                    size: 14 // Ajuster la taille de la police de l'axe X
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            labels: {
                                font: {
                                    size: 16 // Ajuster la taille de la police de la légende
                                }
                            }
                        }
                    }
                }
            });
        })
        .catch(error => {
            console.error('Erreur lors de la récupération des données:', error);
        });
});

</script>


