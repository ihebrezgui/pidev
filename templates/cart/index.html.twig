{% extends 'basefront.html.twig' %}

{% block title %}Votre panier{% endblock %}

{% block gestion %}
    <main id="main" class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="pagetitle mb-4">
                        <h1>Votre panier</h1>
                        <nav>
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item active"><a href="liste-produits">Accueil</a></li>
                                <li class="breadcrumb-item active"><a href="cart">Panier</a></li>
                                
                            </ol>
                        </nav>
                        
                    </div><!-- Fin du titre de la page -->
                    <section class="section">
                        <div class="row justify-content-center">
                            <div class="col-lg-12">
                                <div class="card shadow-lg ">
                                    <div class="card-body">
                                       
                                        {% for message in app.flashes('notice') %}
                                                    <div class="alert alert-success bg-success text-light border-0 alert-dismissible fade show" role="alert">
                                                        {{ message }}
                                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                                    </div>
                                        {% endfor %}
                                        {% for message in app.flashes('noticedelete') %}
                                                    <div class="alert alert-danger bg-danger text-light border-0 alert-dismissible fade show" role="alert">
                                                        {{ message }}
                                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                                    </div>
                                                {% endfor %}
                              
                                        <h5 class="card-title"></h5>
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered table-hover">
                                                <thead class="thead-dark">
                                                    <tr>
                                                        <th scope="col">Produit</th>
                                                        <th scope="col">Prix</th>
                                                        <th scope="col">Quantit√©</th>
                                                        <th scope="col">Total</th>
                                                        <th scope="col">Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% for elements in cart %}
                                                        <tr>
                                                            <td>{{ elements.name }}</td>
                                                            <td>{{ elements.price }} DT</td>
                                                            <td>{{ elements.quantity }}</td>
                                                            <td>{{ elements.total }}</td>
                                                            <td>
                                                                <a href="{{ path('cart_remove', {'id': elements.id}) }}" class="btn btn-danger">Supprimer</a>
                                                               
                                                            </td>
                                                            
                                                        </tr>
                                                    {% else %}
                                                        <tr>
                                                            <td colspan="5" class="text-center">Votre panier est vide</td>
                                                        </tr>
                                                    {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="text-end mt-3">
                                            {% if cart|length > 0 %}
                                                <p>Total Cart: {{ app.session.get('totalCart') }}</p>
                                                <a href="#" class="btn btn-danger">
                                                    <i class="bi bi-cart-x"></i>
                                                </a>
                                            {% endif %}
                                        </div>
                                        <a href="{{ path ('create_order') }}" class="btn btn-success">Passer votre commande</a>
                                        <a href="{{ path('liste_produits') }}" class="btn btn-outline-info me-2">Ajouter autre produits</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
