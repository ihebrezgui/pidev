{% extends 'baseBack.html.twig' %}

{% block event %}
    {% block title %}Edit Events{% endblock %}

    {% block body %}
        <div class="container">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Edit Events</h3>
                        </div>
                        <div class="card-body">
                            {{ include('events/_form.html.twig', {'button_label': 'Update'}) }}
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('app_events_index') }}" class="btn btn-secondary">Back to List</a>
                        </div>
                    </div>
                    <div class="card mt-4">
                        <div class="card-header">
                            <h3 class="card-title">Delete Events</h3>
                        </div>
                        <div class="card-body">
                            {{ include('events/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}
