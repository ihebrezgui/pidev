{% extends 'baseBack.html.twig' %}


{% block body %}
    <main id="main" class="main">
        <div class="container-fluid">
            <div class="row">
                
                 <div class="col-md-12">
                    <div class="pagetitle mb-4">
                        <h1>Votre commande</h1>
                        <nav>
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item active"><a href="liste-produits">Accueil</a></li>
                                <li class="breadcrumb-item active"><a href="panier">Panier</a></li>
                                <li class="breadcrumb-item active"><a href="commande">Commande</a></li>
                            </ol>
                        </nav>
            </nav>
                    </div><!-- Fin du titre de la page -->
                    <section class="section">
                        <div class="row justify-content-center">
                            <div class="col-lg-12">
                                <div class="card shadow-lg ">
                                    <div class="card-body text-start"> <!-- Utilisation de text-start pour aligner le texte à gauche -->
                                        {% for message in app.flashes('notice') %}
                                            <div class="alert alert-success bg-success text-light border-0 alert-dismissible fade show" role="alert">
                                                {{ message }}
                                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                            </div>
                                        {% endfor %}
                                        {% for message in app.flashes('noticedelete') %}
                                            <div class="alert alert-danger bg-danger text-light border-0 alert-dismissible fade show" role="alert">
                                                {{ message }}
                                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                            </div>
                                        {% endfor %}
                                         {% for message in app.flashes('noticesearch1') %}
                                            <div class="alert alert-success text-success alert-dismissible fade show" role="alert">
                                                {{ message }}
                                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                            </div>
                                        {% endfor %}
                                        {% for message in app.flashes('noticesearch') %}
                                            <div class="alert alert-danger text-danger alert-dismissible fade show" role="alert">
                                                {{ message }}
                                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                            </div>
                                        {% endfor %}
                                        <h5 class="card-title"></h5>
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered table-hover">
                                                <thead class="thead-dark">
                                                    <tr>
                                                        <th scope="col">Référence</th>
                                                        <th scope="col">Nom</th>
                                                        <th scope="col">Prénom</th>
                                                        <th scope="col">Adresse Email</th>
                                                        <th scope="col">Téléphone</th>
                                                        <th scope="col">Adresse</th>
                                                         <th scope="col">Actions</th>
                                                    
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% if commande | length == 0 %}
                                                        <tr>
                                                            <td colspan="9" class="text-center">Aucune commande trouvée.</td>
                                                        </tr>
                                                    {% else %}
                                                        {% for commande in commande %}
                                                            <tr>
                                                                <td>{{ commande.idc }}</td>
                                                                <td>{{ commande.nom }}</td>
                                                                <td>{{ commande.prenom }}</td>
                                                                <td>{{ commande.mail }}</td>    
                                                                <td>{{ commande.tel }}</td>
                                                                <td>{{ commande.address }}</td>
                                                              
                                                                
                                                                <td class="d-flex align-items-center">
                                                                    <a href="{{ path('modifier_commande',{idc:commande.idc}) }}" class="btn btn-sm btn-primary me-2">Modifier</a>
                                                                    <a href="#" onclick="if(confirm('Voulez-vous vraiment supprimer ?')) { window.location='{{ path('supprimerCommande', {'idc': commande.idc}) }}'; }" class="btn btn-sm btn-danger">Supprimer</a>
                                                                    <a href="{{ path('contrat_generate_pdf', {'idc': commande.idc}) }}" class="btn btn-sm btn-primary me-2">Générer PDF</a>
                                                                </td>
                                                            </tr>
                                                        {% endfor %}
                                                    {% endif %}
                                                </tbody>
                                            </table>
                                        </div>
                                        

                                       <form action="{{ path('rechercher_commande') }}" method="GET">
                                            <form action="{{ path('rechercher_commande') }}" method="GET">
                                            <div class="input-group mt-3" style="max-width: 320px; margin-left: auto;">
                                                <input type="text" name="q" id="searchInput" class="form-control" placeholder="Rechercher...">
                                                <button type="submit" class="btn btn-primary">Rechercher</button>
                                            </div>
                                        </form>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                                     <div id="searchResults" class="mt-3">
                                        <script>
                                            $(document).ready(function() {
                                                $('#searchInput').on('input', function() {
                                                    var searchTerm = $(this).val();
                                                    if (searchTerm.length >= 1) { // Vérifier si au moins une lettre est saisie
                                                        $.ajax({
                                                            url: "{{ path('rechercher_commande') }}",
                                                            method: "GET",
                                                            data: { q: searchTerm },
                                                            success: function(response) {
                                                                if (response.trim() === '') {
                                                                    $('#searchResults').html('<p>Aucun résultat trouvé.</p>');
                                                                } else {
                                                                    $('#searchResults').html('<p>Résultats pour le mot "' + searchTerm + '" :</p>' + response);
                                                                }
                                                            }
                                                        });
                                                    } else {
                                                        $('#searchResults').html(''); // Effacer les résultats si aucun texte n'est saisi
                                                    }
                                                });
                                            });
                                        </script>
                                     </div>
            </div>
        </div>
    </main>
{% endblock %}
