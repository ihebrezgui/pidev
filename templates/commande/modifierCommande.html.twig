{% extends 'baseBack.html.twig' %}

{% block body %}
    <main id="main" class="main mt-3">
        <div class="pagetitle">
            <h1>Formulaire Modifier Commande</h1>
           <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active"><a href="liste-produits">Accueil</a></li>
                    <li class="breadcrumb-item active"><a href="panier">Panier</a></li>
                    <li class="breadcrumb-item active"><a href="commande">Commande</a></li>
                    <li class="breadcrumb-item active">Formulaires de modification</li>
                </ol>
            </nav>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow p-4">
                    <div class="card-body">
                        <h5 class="card-title text-center">Modifier Commande</h5>

                        <!-- Form Elements -->
                        {{ form_start(f, { attr: { class: 'needs-validation', novalidate: 'novalidate' } }) }}
                        <div class="mb-3">
                            <label for="inputNom" class="form-label">Nom</label>
                            {{ form_widget(f.nom, { attr: { class: 'form-control', id: 'inputNom', required: 'required' } }) }}
                            {{ form_errors(f.nom, { attr: { class: 'text-danger' } }) }}
                            
                        </div>
                        <div class="mb-3">
                            <label for="inputPrenom" class="form-label">Prénom</label>
                            {{ form_widget(f.prenom, { attr: { class: 'form-control', id: 'inputPrenom', required: 'required' } }) }}
                            {{ form_errors(f.prenom, { attr: { class: 'text-danger' } }) }}
                        </div>
                        <div class="mb-3">
                            <label for="inputEmail" class="form-label">Adresse Email</label>
                            {{ form_widget(f.mail, { attr: { class: 'form-control', id: 'inputEmail', required: 'required' } }) }}
                            {{ form_errors(f.mail, { attr: { class: 'text-danger' } }) }}
                        </div>
                        <div class="mb-3">
                            <label for="inputTel" class="form-label">Téléphone</label>
                            {{ form_widget(f.tel, { attr: { class: 'form-control', id: 'inputTel', required: 'required' } }) }}
                            {{ form_errors(f.tel, { attr: { class: 'text-danger' } }) }}
                        </div>
                        <div class="mb-3">
                            <label for="inputPanier" class="form-label">Panier</label>
                            {{ form_widget(f.panier, { attr: { class: 'form-control', id: 'inputPanier', required: 'required' } }) }}
                            {{ form_errors(f.panier, { attr: { class: 'text-danger' } }) }}
                        </div>
                        <div class="mb-3">
                            <label for="inputAddress" class="form-label">Adresse</label>
                            {{ form_widget(f.address, { attr: { class: 'form-control', id: 'inputAddress', required: 'required' } }) }}
                            {{ form_errors(f.address, { attr: { class: 'text-danger' } }) }}
                        </div>

                       <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary">Mise à jour</button>
                        </div>
                        {{ form_end(f) }}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
