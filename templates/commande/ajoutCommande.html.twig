{% extends 'baseBack.html.twig' %}

{% block body %}
    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Formulaire Ajout Commande</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active"><a href="liste-produits">Accueil</a></li>
                    <li class="breadcrumb-item active"><a href="commande">Commande</a></li>
                    <li class="breadcrumb-item active"><a href="panier">Panier</a></li>
                    <li class="breadcrumb-item active">Formulaires d'ajout</li>
                </ol>
            </nav>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow p-4">
                    <div class="card-body">
                        <h5 class="card-title">Ajouter Commande</h5>

                        {{ form_start(f, { attr: { novalidate: 'novalidate', class: 'row g-3' } }) }}
                        <div class="col-md-12">
                            <label for="inputNom" class="form-label">Nom</label>
                            {{ form_widget(f.nom, { attr: { class: 'form-control' } }) }}
                            {{ form_errors(f.nom, { attr: { class: 'text-danger' } }) }}
                        </div>
                        <div class="col-md-12">
                            <label for="inputPrenom" class="form-label">Prénom</label>
                            {{ form_widget(f.prenom, { attr: { class: 'form-control' } }) }}
                            {{ form_errors(f.prenom, { attr: { class: 'text-danger' } }) }}
                        </div>
                        <div class="col-md-12">
                            <label for="inputEmail" class="form-label">Adresse Email</label>
                            {{ form_widget(f.mail, { attr: { class: 'form-control' } }) }}
                            {{ form_errors(f.mail, { attr: { class: 'text-danger' } }) }}
                        </div>
                        <div class="col-md-12">
                            <label for="inputTel" class="form-label">Téléphone</label>
                            {{ form_widget(f.tel, { attr: { class: 'form-control' } }) }}
                            {{ form_errors(f.tel, { attr: { class: 'text-danger' } }) }}
                        </div>
                        <div class="col-md-12">
                            <label for="inputPanier" class="form-label">Panier</label>
                            {{ form_widget(f.panier, { attr: { class: 'form-control' } }) }}
                            {{ form_errors(f.panier, { attr: { class: 'text-danger' } }) }}
                        </div>
                        <div class="col-md-12">
                            <label for="inputAddress" class="form-label">Adresse</label>
                            {{ form_widget(f.address, { attr: { class: 'form-control' } }) }}
                            {{ form_errors(f.address, { attr: { class: 'text-danger' } }) }}
                        </div>
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                        </div>
                        {{ form_end(f) }}
                    </div>
                </div>
            </div>
        </div>

    </main>
{% endblock %}
